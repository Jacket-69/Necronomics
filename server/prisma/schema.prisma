generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email    String @unique
  hash     String
  username String?

  // Relation: A user can have many transactions
  transactions Transaction[]
}

// Defines the shape of an income or expense record
model Transaction {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  amount      Float
  description String
  type        TransactionType // INCOME or EXPENSE
  date        DateTime

  // Relation: Each transaction belongs to one user
  user   User   @relation(fields: [userId], references: [id])
  userId String
}

// Enum for the transaction type
enum TransactionType {
  INCOME
  EXPENSE
}
